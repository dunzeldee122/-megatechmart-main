pipeline {
    agent any

    stages {
        stage('Clone Repo') {
            steps {
                echo 'Cloning repository...'
                git 'https://github.com/dunzeldee122/-megatechmart-main.git'
            }
        }

        stage('Show Files') {
            steps {
                echo 'Listing project files...'
                bat 'dir'
            }
        }

        stage('Build Complete') {
            steps {
                echo 'âœ… Files cloned and listed successfully.'
            }
        }
    }
}
